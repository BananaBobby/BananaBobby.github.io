.layout
	padding: 40px;
	max-width: 1200px;
	margin: 0 auto;
	display: flex;
	align-items: center;
	min-height: 100vh;
	box-sizing: border-box;

	&__sidebar
		width: 360px;
		min-width: 360px;

	&__content
		padding-left: 80px;
		font-size: 22px;
		line-height: 40px;

		p:first-child
			margin-top: 0

		p:last-child
			margin-bottom: 0

	@media (max-width: 960px)
		flex-direction: column;
		align-items: start;

		.layout__content
			padding-left: 0;
			padding-top: 40px;
